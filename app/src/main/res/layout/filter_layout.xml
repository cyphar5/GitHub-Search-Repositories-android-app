<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/fl_filter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Filter"
        android:textColor="@color/black_80"
        android:layout_alignParentTop="true"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/fl_cross"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="6dp"
        android:text="Filter"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_cross_black"
        android:layout_marginRight="15dp"
        android:textSize="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/fl_cross"
        android:background="@color/light_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black_60"
            android:layout_marginTop="5dp"
            android:text="Sort By"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black_60"
                android:text="Stars"/>


            <Switch
                android:id="@+id/fl_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="50dp"
                android:layout_marginLeft="150dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black_60"
                android:text="Forks"/>


            <Switch
                android:id="@+id/fl_forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:switchMinWidth="50dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_60"
                android:textSize="15dp"
                android:text="Updated On"/>


            <Switch
                android:id="@+id/fl_updated_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:switchMinWidth="50dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/black_60"
            android:text="Select Date Range"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="2dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/ic_start_date"/>


                <TextView
                    android:id="@+id/fl_sd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="15dp"
                    android:hint="Start Date"
                    android:textColor="@color/black_60"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="85dp"
                    android:src="@drawable/ic_end_date"/>


                <TextView
                    android:id="@+id/fl_ed"
                    android:hint="End Date"
                    android:layout_marginLeft="4dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_60"
                    />

            </LinearLayout>





        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop = "20dp"
            android:textSize="16dp"
            android:textColor="@color/black_60"
            android:text="Order by"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_60"
                android:textSize="15dp"
                android:text="Descending"/>


            <Switch
                android:id="@+id/fl_desending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="55dp"
                android:layout_marginLeft="35dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_60"
                android:text="Ascending"
                android:layout_marginLeft="35dp"
                android:textSize="15dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/fl_apply_all"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:padding="3dp"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:textSize="15dp"
                android:layout_below="@+id/linearLayout"
                android:background="@drawable/round_btn"
                android:text="Apply Filters" />


            <TextView
                android:id="@+id/fl_clear_all"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:padding="3dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_below="@+id/linearLayout"
                android:background="@drawable/round_btn"
                android:text="Clear All" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>